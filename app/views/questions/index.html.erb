        <section class="center col-md-10">
            <% @questions.reverse_each do |question| %>
                <div class="questionanswer ">
                <section class="table-bordered orangebackground">
                  <section class="questionbodyinsideuser ">  


                  <%= image_tag @user, :class => "indexavatar" %>    
                   


                      <h3><%= question.question_asked %></h3>

                        <%= current_user.id %> Current user <br>
                        <%= question.user_id %> User <br> 
                        <% if current_user.id == question.user_id %>
                            <td><%= link_to 'Expand', question, :class => "deletequestion" %></td>
                            <td><%= link_to 'Edit', edit_question_path(question), :class => "deletequestion" %></td>
                            <td><%= link_to 'Delete', question, :class => "deletequestion", method: :delete, data: { confirm: 'Are you sure?' } %></td> 
                        <% else %>
                            <td><%= link_to 'Expand', question, :class => "deletequestion" %></td>
                        <% end %>

                        
                 </section>   
                 <section>
                  <ul>
                <% question.answers.each do |answer| %>
                  <li>
                    <%= answer.answer_given  %>

                    <%= link_to 'Delete', answer, method: :delete, data: { confirm: 'Are you sure?' }, :class => "deletequestion" %>
                  </li>
                  
                <% end %>
                </ul>
              </section>
            </section>


